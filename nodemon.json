{
  "restartable": "rs",
  "ignore": [
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "": "node",
    "js": "node --harmony"
  },
  "events": {
    "start": "echo ----------app start----------",
    "restart": "echo ----------app reload----------"
  },
  "watch": [
    "server/**/*.js",
    "server.js",
    "webpack/**/*.js"
  ],
  "env": {
    "NODE_ENV": "server",
    "PORT": "9090"
  },
  "ext": "js",
  "legacy-watch": false,
  "runOnChangeOnly": false,
  "colours": true
}